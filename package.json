{
  "name": "react-native-postcss-transformer",
  "version": "2.0.0",
  "description": "PostCSS transformer for react-native",
  "main": "index.js",
  "repository": "https://github.com/kristerkari/react-native-postcss-transformer",
  "scripts": {
    "release": "np",
    "precommit": "lint-staged",
    "test": "eslint ."
  },
  "author": "Krister Kari",
  "license": "MIT",
  "files": [
    "CHANGELOG.md",
    "index.js",
    "README.md"
  ],
  "dependencies": {
    "css-to-react-native-transform": "^2.0.0",
    "postcss-load-config": "^6.0.1"
  },
  "peerDependencies": {
    "postcss": ">=6.0.0",
    "react-native": ">=0.59.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^15.2.2",
    "np": "^10.0.5",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "space-before-function-paren": "off",
      "semi": [
        2,
        "always"
      ],
      "quotes": [
        2,
        "double"
      ],
      "no-else-return": 2
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  }
}
